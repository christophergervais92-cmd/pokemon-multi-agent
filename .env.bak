# =============================================================================
# Poke Agent - Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Discord Bot (REQUIRED)
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here
DISCORD_GUILD_ID=                                # Optional: for faster slash command sync
DISCORD_ALERT_ROLES=                             # Optional: comma-separated role IDs to ping

# Discord OAuth (for web login)
# Create at: https://discord.com/developers/applications -> OAuth2 -> Add Redirect
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=https://pokemon-multi-agent.onrender.com/auth/discord/callback

# Pokemon Price API
POKEMON_PRICE_API_URL=https://www.pokemonpricetracker.com/api/v2/cards
POKEMON_PRICE_API_KEY=your_api_key_here

# AI Vision (for card scanning/grading)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Multi-Channel Notifications (all optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=
PUSHBULLET_API_KEY=
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@pokeagent.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
TELEGRAM_BOT_TOKEN=

# =============================================================================
# SECURE PAYMENT INTEGRATION (Stripe & PayPal)
# Card numbers are NEVER stored on our servers
# =============================================================================

# Stripe - https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_XXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXX

# PayPal - https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# =============================================================================
# AUTO-BUY & SAFETY
# =============================================================================
MAX_PRICE_PER_CARD=100.0
BUDGET_LIMIT=500.0
SIMULATION_MODE=true
MIN_DELAY_BETWEEN_REQUESTS=3.0
MAX_DELAY_BETWEEN_REQUESTS=8.0

# Store Location
DEFAULT_ZIP_CODE=
STORE_SEARCH_RADIUS=50

# Security (generate: python3 -c "import secrets; print(secrets.token_hex(32))")
POKEMON_ENCRYPTION_KEY=
ENCRYPTION_KEY=

# =============================================================================
# ANTI-BLOCKING / PROXY CONFIGURATION
# =============================================================================

# Proxy Service (Optional - reduces blocking risk)
# Free: Use VPN or public proxy lists (unreliable)
# Paid: Bright Data, Oxylabs, Smartproxy ($25-500/month)
# 
# SETUP INSTRUCTIONS:
# 1. Sign up for Smartproxy (7-day free trial): https://smartproxy.com/
#    OR ProxyMesh (14-day money-back): https://proxymesh.com/
# 2. Get credentials from dashboard
# 3. Format: http://username:password@proxy.example.com:port
#
# Smartproxy format:
# PROXY_SERVICE_URL=http://username:password@gate.smartproxy.com:10000
#
# ProxyMesh format:
# PROXY_SERVICE_URL=http://username:password@rotating-residential.proxymesh.com:31280
#
PROXY_SERVICE_URL=
PROXY_SERVICE_KEY=

# Free proxy list (comma-separated, less reliable)
FREE_PROXY_LIST=

# Scan Rate Limiting (adjust if getting blocked)
SCAN_MIN_DELAY=1.5          # Minimum seconds between requests
SCAN_MAX_DELAY=4.0          # Maximum seconds between requests
SCAN_MAX_RPM=15             # Max requests per minute per retailer