# =============================================================================
# LO TCG (Locals Only TCG) - Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Discord Bot (REQUIRED)
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CHANNEL_ID=your_channel_id_here
DISCORD_GUILD_ID=                                # Optional: for faster slash command sync
DISCORD_ALERT_ROLES=                             # Optional: comma-separated role IDs to ping

# Pokemon Price API
POKEMON_PRICE_API_URL=https://www.pokemonpricetracker.com/api/v2/cards
POKEMON_PRICE_API_KEY=your_api_key_here

# AI Vision (for card scanning/grading)
# Either/or - Anthropic Claude or OpenAI GPT-4
ANTHROPIC_API_KEY=your_anthropic_key_here        # For Claude Vision
OPENAI_API_KEY=your_openai_key_here              # For GPT-4 Vision

# Multi-Channel Notifications (all optional)
# Twilio for SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Pushover for Push Notifications
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=

# Pushbullet (alternative push)
PUSHBULLET_API_KEY=

# Email via SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@lotcg.com

# Email via SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Telegram
TELEGRAM_BOT_TOKEN=

# Auto-Buy Settings
MAX_PRICE_PER_CARD=100.0
BUDGET_LIMIT=500.0
SIMULATION_MODE=true

# Fraud Prevention
MIN_DELAY_BETWEEN_REQUESTS=3.0
MAX_DELAY_BETWEEN_REQUESTS=8.0

# Store Location
DEFAULT_ZIP_CODE=
STORE_SEARCH_RADIUS=50

# Security (generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
POKEMON_ENCRYPTION_KEY=
